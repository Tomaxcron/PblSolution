@model Pbl.Models.ViewModel.SemestreViewModel
@{
    ViewBag.Title = "Update";
}
<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>
<h2>Alterar Semestre</h2>

@using (Html.BeginForm("Update", "ControleSemestres"))
{
    @Html.ValidationSummary(true, "Algo não está certo")
    @Html.TextBoxFor(c => c.idSemestre, new { @value = Model.idSemestre, @type = "hidden" })
    <div class="form-group">
        <label for="DataInicioModulo1">Data Inicial Modulo 1</label>
        @Html.TextBoxFor(c => c.DataInicioModulo1, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(c => c.DataInicioModulo1)
    </div>
    <div class="form-group">
        <label for="DataFinalModulo1">Data Final Modulo 1</label>
        @Html.TextBoxFor(c => c.DataFinalModulo1, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(c => c.DataFinalModulo1)
    </div>
    <div class="form-group">
        <label for="dataInicioModulo2">Data Inicial Modulo 2</label>
        @Html.TextBoxFor(c => c.DataInicioModulo2, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(c => c.DataInicioModulo2)
    </div>
    <div class="form-group">
        <label for="DataFinalModulo2">Data Final Modulo 2</label>
        @Html.TextBoxFor(c => c.DataFinalModulo2, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(c => c.DataFinalModulo2)
    </div>
    <div class="form-group">
        <label for="DataInicioModulo3">Data Inicial Modulo 3</label>
        @Html.TextBoxFor(c => c.DataInicioModulo3, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(c => c.DataInicioModulo3)
    </div>
    <div class="form-group">
        <label for="DataFinalModulo3">Data Final Modulo 3</label>
        @Html.TextBoxFor(c => c.DataFinalModulo3, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(c => c.DataFinalModulo3)
    </div>
    <div class="form-group">
        <label for="Descricao">Descrição</label>
        @Html.TextBoxFor(c => c.Descricao, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Descricao)
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Salvar</button>
}

