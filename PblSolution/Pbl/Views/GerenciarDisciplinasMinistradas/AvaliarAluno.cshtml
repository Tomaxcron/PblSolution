@model Pbl.Models.ControleNotasXAula

@{
    ViewBag.Title = "AvaliarAluno";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","GerenciarDisciplinasMinistradas")" title="Vá para Gerencias Disciplinas" class="tip-bottom"><i class="fa fa-sitemap"></i> Disciplinas</a></div>
</div>

<h2 class="profs">Avaliar Aluno</h2>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <form action="" method="post" class="form-styles">
                    <h1>Controle Notas X Aula</h1>
                    <h4>Med: @(((Pbl.Models.Aula)ViewData["Aula"]).Turma.Med.descMed), Módulo: @(((Pbl.Models.Modulo)ViewData["Modulo"]).descModulo), Disciplina: @(((Pbl.Models.Aula)ViewData["Aula"]).Disciplina.descDisciplina), Turma: @(((Pbl.Models.Aula)ViewData["Aula"]).Turma.descTurma), Aluno: @(((Pbl.Models.Aluno)ViewData["Aluno"]).nomeAluno)</h4>
                    @using (Html.BeginForm("AvaliarAlunoAction", "GerenciarDisciplinasMinistradas"))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.idControleNotas)
                        @Html.HiddenFor(model => model.idAula)
                        <ul>
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Nota</label>
                                    <div class="col-md-4 inputGroupContainer">
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.nota, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.nota, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </li>

                            @Html.AntiForgeryToken()
                            <li>
                                <div class="form-group">
                                    <label class="col-md-4 control-label"></label>
                                    <div class="col-md-4">
                                        <button type="submit" value="Save" class="btn btn-warning">Cadastrar <span class="glyphicon glyphicon-send"></span></button>
                                    </div>
                                </div>

                            </li>
                        </ul>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

