@model IEnumerable<Pbl.Models.Aula>

@{
    ViewBag.Title = "Index";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","GerenciarDisciplinasMinistradas")" title="Vá para Gerencias Disciplinas" class="tip-bottom"><i class="fa fa-sitemap"></i> Disciplinas</a></div>
</div>
<h2 class="profs">Index</h2>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-content nopadding">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>Ativo</th>
                                    <th>Desc Turma</th>
                                    <th>Desc Disciplina</th>
                                    <th>Nome Professor</th>
                                    <th>Desc Med</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@Html.DisplayFor(modelItem => item.ativo)</td>
                                        <td>@Html.DisplayNameFor(model => model.Turma.descTurma)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Disciplina.descDisciplina)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Professor.nomeProfessor)</td>
                                        <td>@Html.DisplayFor(modelitem => item.Turma.Med.descMed)</td>
                                        <td>
                                            <i class="fa fa-check"></i> @Html.ActionLink("Avaliar", "SelecionarModulo", "GerenciarDisciplinasMinistradas", new { idAula = item.idAula }, new { @class = "alter" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

