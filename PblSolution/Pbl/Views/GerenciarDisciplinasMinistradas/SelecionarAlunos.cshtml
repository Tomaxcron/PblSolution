@model IEnumerable<Pbl.Models.ViewModel.SelecionarAlunosViewModel>

@{
    ViewBag.Title = "SelecionarAlunos";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","GerenciarDisciplinasMinistradas")" title="Vá para Gerencias Disciplinas" class="tip-bottom"><i class="fa fa-sitemap"></i> Disciplinas</a></div>
</div>

<h2 class="profs">SelecionarAlunos @Html.ActionLink("Adicionar", "Create", null, new { @class = "classname" })</h2>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-content nopadding">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>Ativo</th>
                                    <th>Aluno</th>
                                    <th>Desc Turma</th>
                                    <th>Nota</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@Html.DisplayFor(modelItem => item.inscricao.ativo)</td>
                                        <td>@Html.DisplayFor(modelItem => item.inscricao.Aluno.nomeAluno)</td>
                                        <td>@Html.DisplayFor(modelItem => item.inscricao.Turma.descTurma)</td>
                                        <td>@Html.DisplayFor(modelItem => item.nota)</td>
                                        <td>
                                            <i class="fa fa-check "></i> @Html.ActionLink("Avaliar", "AvaliarAluno", "GerenciarDisciplinasMinistradas", new { idInscricaoTurma = item.inscricao.idInscricaoTurma, idModulo = ((Pbl.Models.Modulo)ViewData["Modulo"]).idModulo, idAula = ((Pbl.Models.Aula)ViewData["Aula"]).idAula }, new { @class = "alter" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

