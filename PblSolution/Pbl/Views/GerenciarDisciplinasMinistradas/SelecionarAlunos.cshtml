@model IEnumerable<Pbl.Models.InscricaoTurma>

@{
    ViewBag.Title = "SelecionarAlunos";
}

<h2>SelecionarAlunos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Turma.descTurma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aluno.nomeAluno)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Turma.descTurma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Aluno.nomeAluno)
        </td>
        <td>
            @Html.ActionLink("Avaliar","AvaliarAluno", "GerenciarDisciplinasMinistradas", new { idInscricaoTurma = item.idInscricaoTurma, idModulo = ((Pbl.Models.Modulo) ViewData["Modulo"]) })
        </td>
    </tr>
}

</table>
