@model IEnumerable<Pbl.Models.Modulo>

@{
    ViewBag.Title = "SelecionarModulo";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","GerenciarDisciplinasMinistradas")" title="Vá para Gerencias Disciplinas" class="tip-bottom"><i class="fa fa-sitemap"></i> Disciplinas</a></div>
</div>


<h2 class="profs">@(((Pbl.Models.Aula)ViewData["Aula"]).Turma.Med.descMed) , Turma: @(((Pbl.Models.Aula)ViewData["Aula"]).Turma.descTurma), Aula: @(((Pbl.Models.Aula)ViewData["Aula"]).Disciplina.descDisciplina)</h2>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-content nopadding">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>Desc Modulo</th>
                                    <th>DT Inicio</th>
                                    <th>DT Fim</th>
                                    <th>Desc Semestre</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@Html.DisplayFor(modelItem => item.descModulo)</td>
                                        <td>@Html.DisplayNameFor(model => model.dtInicio)</td>
                                        <td>@Html.DisplayNameFor(model => model.dtFim)</td>
                                        <td>@Html.DisplayNameFor(model => model.Semestre.descSemestre)</td>
                                        <td>
                                            <i class="fa fa-check-square "></i> @Html.ActionLink("Selecionar", "SelecionarAlunos", new { idAula = ((Pbl.Models.Aula)ViewData["Aula"]).Turma.Med.descMed, idModulo = item.idModulo }, new { @class = "alter" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

