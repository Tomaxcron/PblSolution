@model IEnumerable<Pbl.Models.ProblemaXMed>

@{
    ViewBag.Title = "SelecionarProblema";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","GerenciarProblemasMinistados")" title="Vá para Gerencias Grupos" class="tip-bottom"><i class="fa fa-users"></i> Grupos</a></div>
</div>
<h2 class="profs">Selecionar Problema @Html.ActionLink("Adicionar", "Create", null, new { @class = "classname" })</h2>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-content nopadding">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>Desc Med</th>
                                    <th>Problema</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@Html.DisplayFor(modelItem => item.Med.descMed)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Problema.tituloProblema)</td>
                                        <td>
                                            <i class="fa fa-check-square "></i>  @Html.ActionLink("Selecionar", "MontarFichaAvaliativa", "GerenciarProblemasMinistados", new { idProblemaXMed = item.idProblemaxMed, idGrupo = ((Pbl.Models.Grupo)ViewData["Grupo"]).idGrupo }, new { @class = "alter" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

