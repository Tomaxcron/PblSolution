@model IEnumerable<Pbl.Models.Grupo>

@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","GerenciarProblemasMinistados")" title="Vá para Gerencias Grupos" class="tip-bottom"><i class="fa fa-users"></i> Grupos</a></div>
</div>
<h2 class="profs">Index @Html.ActionLink("Adicionar", "Create", null, new { @class = "classname" })</h2>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-content nopadding">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>Desc Grupo</th>
                                    <th>Ativo</th>
                                    <th>Desc Med</th>
                                    <th>Nome Professor</th>
                                    <th>Opções</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@Html.DisplayFor(modelItem => item.descGrupo)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ativo)</td>
                                        <td>@Html.DisplayNameFor(model => model.Med.descMed)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Professor.nomeProfessor)</td>
                                        <td>
                                            <i class="fa fa-check-square "></i>  @Html.ActionLink("Selecionar", "SelecionarProblema", "GerenciarProblemasMinistados", new { idGrupo = item.idGrupo }, new { @class = "alter" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

