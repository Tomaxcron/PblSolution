@model Pbl.Models.AvaliacaoTutoria

@{
    ViewBag.Title = "AvaliarAluno";
}

<h2>AvaliarAluno</h2>
<h2>@Model.ControleNotas.InscricaoTurma.Aluno.nomeAluno</h2>
<h2>@Model.Grupo.descGrupo</h2>
<h2>@Model.ProblemaXMed.Problema.tituloProblema</h2>
<h2>@Model.ProblemaXMed.Med.descMed</h2>
<h2>@Model.ProblemaXMed.Med.Semestre.descSemestre</h2>

@using (Html.BeginForm("AvaliarAlunoAction","GerenciarProblemasMinistados"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AvaliacaoTutoria</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idAvaliacaoTutoria)
        @Html.HiddenFor(model => model.idProblemaxMed)
        @Html.HiddenFor(model => model.idControleNotas)
        @Html.HiddenFor(model => model.dtInicio)
        @Html.HiddenFor(model => model.dtFim)
        @Html.HiddenFor(model => model.idGrupo)

        <div class="form-group">
            @Html.LabelFor(model => model.notaProfessor, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.notaProfessor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.notaProfessor, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
