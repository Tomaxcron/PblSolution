@model Pbl.Models.TipoDisciplina
@{
    ViewBag.Title = "Alterar tipo de disciplina";
    Layout = "~/Views/Shared/_LayoutDiretor.cshtml";
}
<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleTipoDisciplina")" title="Vá para Controle Tipo Disciplinas" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Tipo disciplina</a></div>
</div>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">

                <form action="" method="post" class="form-styles">
                    <input name="idTIpoDisciplina" type="hidden" value="@Model.idTipoDisciplina" />
                    <h1>Update</h1>
                    <ul>
                        <li>
                            <input name="descTipoDisciplina" type="text" value="@Model.descTipoDisciplina" />
                            <span>Informa a Descrição</span>
                        </li>
                        @Html.AntiForgeryToken()
                        <li>
                            <input type="submit" value="Alterar" />
                        </li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
</div>

