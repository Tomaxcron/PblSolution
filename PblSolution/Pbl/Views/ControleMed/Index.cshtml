@model IEnumerable<Pbl.Models.Med>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDiretor.cshtml";
}

<h2>Controle de MED</h2>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-content nopadding">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>MED</th>
                                    <th>Semestre</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        <td>MED @Html.DisplayFor(c => item.descMed)</td>
                                        <td>@Html.DisplayFor(c => item.Semestre.descSemestre)</td>
                                        <td>
                                            @Html.ActionLink("Gerenciar", "GerenciarMed", new { id = item.idMed, @class = "btn btn-primary" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
