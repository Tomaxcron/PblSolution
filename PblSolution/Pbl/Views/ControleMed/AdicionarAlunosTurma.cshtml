@model Pbl.Models.ViewModel.AlunosTurmaViewModel
@{
    ViewBag.Title = "AdicionarAlunosTurma";
    Layout = "~/Views/Shared/_LayoutDiretor.cshtml";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleMed")" title="Vá para Controle Med" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Med</a></div>
</div>
<h2> Turma: @Model.turmaAtual.descTurma</h2>

<h2>Alunos Cadastrados </h2>

<table class="table table-striped table-hover" id="myTable">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Matricula</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model.AlunosCadastrados)
        {
            <tr class="gradeX">
                <td>@Html.DisplayFor(modelItem => aluno.nomeAluno)</td>
                <td>@Html.DisplayFor(modelItem => aluno.cpfAluno)</td>
                <td>@Html.DisplayFor(modelItem => aluno.matriculaAluno)</td>
                @if (aluno.ativo)
                {
                    <td>Aluno Ativo</td>
                }
                else
                {
                    <td>aluno Inativo</td>
                }
                <td>
                    @Ajax.ActionLink("Remover Alunos", "RemoverAlunosTurma", "ControleMed", new { idAluno = aluno.idAluno, idTurma = Model.turmaAtual.idTurma }, new AjaxOptions { HttpMethod = "POST" }, new { @class = "alter" })
                </td>
            </tr>
        }
    </tbody>
</table>

<table class="table table-striped table-hover" id="myTable">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Matricula</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model.AlunosDisponiveis)
        {
            <tr class="gradeX">
                <td>@Html.DisplayFor(modelItem => aluno.nomeAluno)</td>
                <td>@Html.DisplayFor(modelItem => aluno.cpfAluno)</td>
                <td>@Html.DisplayFor(modelItem => aluno.matriculaAluno)</td>
                <td>
                    @Ajax.ActionLink("Adicionar Aluno", "AdicionarAlunosTurmaAction", "ControleMed", new { idAluno = aluno.idAluno, idTurma = Model.turmaAtual.idTurma }, new AjaxOptions { HttpMethod = "POST" }, new { @class = "alter" })
                </td>
            </tr>
        }
    </tbody>
</table>

