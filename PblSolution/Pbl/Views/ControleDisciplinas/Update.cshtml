@model PBL.Models.ViewModel.DisciplinaViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutDiretor.cshtml";
}

<h2>Update</h2>

@using (Html.BeginForm("Update", "ControleDisciplinas"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    @Html.TextBoxFor(c => c.disciplina.idDisciplina, new { @value = Model.disciplina.idDisciplina, @type = "hidden" })
    <div class="form-group">
        <label for="descDisciplina">Disciplina</label>
        @Html.TextBoxFor(c => c.disciplina.descDisciplina, new { @value = Model.disciplina.descDisciplina, @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Tipo Disciplina</label><br />
        @Html.DropDownListFor(c => c.disciplina.idTipoDisciplina, new SelectList(Model.listaTipoDisciplina, "idTipoDisciplina", "descTipoDisciplina"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.disciplina.idTipoDisciplina)
    </div>
    @Html.AntiForgeryToken();
    <button type="submit" class="btn btn-primary">Alterar</button>
}