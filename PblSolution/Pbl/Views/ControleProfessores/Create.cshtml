@model Pbl.Models.Professor
@{
    ViewBag.Title = "Create";
}
<meta charset="utf-8">
<script type="text/javascript">
    $mensagem = "@ViewBag.Message";
    if ($mensagem) {
        alert($mensagem);
    }
</script>
<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleProfessores")" title="Vá para Controle Professores" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Professor</a></div>
</div>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <form action="" method="post" class="form-styles">
                    <h1>Cadastro de Professores</h1>
                    @using (Html.BeginForm("Create", "ControleProfessores"))
                    {
                        @Html.ValidationSummary(true, "Algo não está certo.");
                        <ul>
                            <li>
                                <input name="nomeProfessor" type="text" placeholder="Nome Professor" />
                                <span>Informe o Nome</span>
                            </li>
                            <li>
                                <input name="cpfProfessor" type="text" placeholder="CPF" />
                                <span>Informe o CPF</span>
                            </li>
                            <li>
                                <input name="senhaProfessor" type="password" placeholder="Senha" />
                                <span>Informe a senha</span>
                            </li>
                            @Html.AntiForgeryToken()
                            <li>
                                <input type="submit" value="Salvar" />
                            </li>
                        </ul>
                    }
                </form>
