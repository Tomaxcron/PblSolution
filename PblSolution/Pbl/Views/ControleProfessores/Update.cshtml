@model Pbl.Models.Professor
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutDiretor.cshtml";
}

<div id="content-header">
    <div id="breadcrumb"> <a href="@Url.Action("Index","Home")" title="Vá para Home" class="tip-bottom"><img src="~/Content/img/home.png" class="home" />Home</a><a href="@Url.Action("Index","ControleProfessores")" title="Vá para Controle Professores" class="tip-bottom"><img src="~/Content/img/client.png" class="home" />Professor</a></div>
</div>

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <form action="" method="post" class="form-styles">
                    <h1>Update</h1>
                    @using (Html.BeginForm("Update", "ControleProfessores"))
                    {
                        @Html.TextBoxFor(c => c.idProfessor, new { @value = Model.idProfessor, @type = "hidden" })
                        @Html.TextBoxFor(c => c.senhaProfessor, new { @value = Model.senhaProfessor, @type = "hidden" })
                        <ul>
                            <li>
                                <input name="nomeProfessor" type="text" placeholder="Titulo" value="@Model.nomeProfessor" />
                                <span>Informe o titulo</span>
                            </li>
                            <li>
                                <input name="cpfProfessor" type="text" placeholder="Titulo" value="@Model.cpfProfessor" />
                                <span>Informe o titulo</span>
                            </li>
                            @Html.AntiForgeryToken()
                            <li>
                                <input type="submit" value="Alterar" />
                            </li>
                        </ul>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

